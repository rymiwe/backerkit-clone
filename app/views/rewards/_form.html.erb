<%= form_with(model: [@project, reward], local: true, class: "space-y-6") do |f| %>
  <% if reward.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
      <h2 class="text-lg font-bold mb-2">
        <%= pluralize(reward.errors.count, "error") %> prohibited this reward from being saved:
      </h2>
      <ul class="list-disc list-inside">
        <% reward.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :title, class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="mb-4">
    <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :description, rows: 4, class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="mb-4">
    <%= f.label :amount, "Pledge Amount ($)", class: "block text-sm font-medium text-gray-700" %>
    <%= f.number_field :amount, step: 1.0, min: 1, class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="mb-4">
    <%= f.label :estimated_delivery, "Estimated Delivery Date", class: "block text-sm font-medium text-gray-700" %>
    <%= f.date_field :estimated_delivery, min: Date.today, class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="flex items-center justify-between mt-6">
    <%= f.submit class: "group relative w-auto flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <%= link_to "Cancel", project_path(@project), class: "text-sm text-gray-600 hover:text-gray-900" %>
  </div>
<% end %>
