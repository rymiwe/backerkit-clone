<div class="bg-white shadow-md rounded-lg p-6">
  <h3 class="text-lg font-medium text-gray-900 mb-4">Project Status</h3>
  
  <%= form_with(model: project, local: true) do |f| %>
    <div class="mb-4">
      <p class="text-sm text-gray-600 mb-2">Current status: 
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= project.status == 'active' ? 'green' : project.status == 'draft' ? 'gray' : project.status == 'completed' ? 'blue' : 'yellow' %>-100 text-<%= project.status == 'active' ? 'green' : project.status == 'draft' ? 'gray' : project.status == 'completed' ? 'blue' : 'yellow' %>-800">
          <%= project.status.capitalize %>
        </span>
      </p>
      
      <div class="mt-4">
        <%= f.label :status, "Change status to:", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-2 space-y-2">
          <div class="flex items-center">
            <%= f.radio_button :status, 'draft', class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500" %>
            <label for="project_status_draft" class="ml-3 block text-sm text-gray-700">
              Draft - Only visible to you, not accepting pledges
            </label>
          </div>
          
          <div class="flex items-center">
            <%= f.radio_button :status, 'active', class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500" %>
            <label for="project_status_active" class="ml-3 block text-sm text-gray-700">
              Active - Visible to everyone, accepting pledges
            </label>
          </div>
          
          <div class="flex items-center">
            <%= f.radio_button :status, 'completed', class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500" %>
            <label for="project_status_completed" class="ml-3 block text-sm text-gray-700">
              Completed - Campaign has ended, no longer accepting pledges
            </label>
          </div>
          
          <div class="flex items-center">
            <%= f.radio_button :status, 'canceled', class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500" %>
            <label for="project_status_canceled" class="ml-3 block text-sm text-gray-700">
              Canceled - Campaign has been canceled
            </label>
          </div>
        </div>
      </div>
    </div>
    
    <div class="flex justify-end">
      <%= f.submit "Update Status", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>
</div>
