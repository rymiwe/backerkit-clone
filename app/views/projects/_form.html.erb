<%= form_with(model: project, local: true, class: "space-y-6") do |f| %>
  <% if project.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
      <h2 class="text-lg font-bold mb-2">
        <%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:
      </h2>
      <ul class="list-disc list-inside">
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :title, class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="mb-4">
    <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :description, rows: 5, class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="mb-4">
    <%= f.label :goal, "Funding Goal ($)", class: "block text-sm font-medium text-gray-700" %>
    <%= f.number_field :goal, step: 1.0, min: 1, class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="mb-4">
    <%= f.label :end_date, "Campaign End Date", class: "block text-sm font-medium text-gray-700" %>
    <%= f.date_field :end_date, min: Date.today, class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="mb-4">
    <%= f.label :image_url, "Project Image URL", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :image_url, class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    <p class="text-xs text-gray-500 mt-1">Enter a URL to an image for your project</p>
  </div>

  <div class="mb-4">
    <%= f.label :category, class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :category, ['Technology', 'Art', 'Food', 'Games', 'Music', 'Publishing', 'Design', 'Film & Video', 'Fashion', 'Other'], { include_blank: 'Select a category' }, class: "mt-1 appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="flex items-center justify-between mt-6">
    <%= f.submit class: "group relative w-auto flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <%= link_to "Cancel", projects_path, class: "text-sm text-gray-600 hover:text-gray-900" %>
  </div>
<% end %>
