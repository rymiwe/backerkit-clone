<div class="max-w-7xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @project.title %></h1>
      <p class="text-gray-600 mt-1">Project Dashboard</p>
    </div>
    <div class="flex space-x-4">
      <%= link_to "View Project", project_path(@project), class: "text-indigo-600 hover:text-indigo-800" %>
      <%= link_to "Edit Project", edit_project_path(@project), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
  
  <!-- Stats Overview -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-10">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-indigo-100 mr-4">
          <svg class="h-6 w-6 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Total Raised</p>
          <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@total_raised) %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-green-100 mr-4">
          <svg class="h-6 w-6 text-green-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Total Backers</p>
          <p class="text-2xl font-bold text-gray-900"><%= @backer_count %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-blue-100 mr-4">
          <svg class="h-6 w-6 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Funding Progress</p>
          <p class="text-2xl font-bold text-gray-900"><%= @funding_percentage %>%</p>
        </div>
      </div>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-yellow-100 mr-4">
          <svg class="h-6 w-6 text-yellow-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Days Remaining</p>
          <p class="text-2xl font-bold text-gray-900"><%= @project.days_remaining %></p>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Progress Bar -->
  <div class="bg-white rounded-lg shadow p-6 mb-10">
    <div class="flex justify-between items-center mb-2">
      <h2 class="text-lg font-medium text-gray-900">Funding Progress</h2>
      <span class="text-sm font-medium text-gray-500"><%= number_to_currency(@total_raised) %> of <%= number_to_currency(@project.goal) %></span>
    </div>
    <div class="h-4 bg-gray-200 rounded-full overflow-hidden">
      <div class="h-full bg-indigo-600 rounded-full" style="width: <%= @funding_percentage %>%"></div>
    </div>
    <div class="flex justify-between mt-2">
      <span class="text-xs text-gray-500">0%</span>
      <span class="text-xs text-gray-500">50%</span>
      <span class="text-xs text-gray-500">100%</span>
    </div>
  </div>
  
  <!-- Tabs -->
  <div class="mb-8">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-8">
        <a href="#backers" class="border-indigo-500 text-indigo-600 whitespace-nowrap pb-4 px-1 border-b-2 font-medium text-sm" aria-current="page">
          Recent Backers
        </a>
        <a href="#rewards" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap pb-4 px-1 border-b-2 font-medium text-sm">
          Rewards Overview
        </a>
      </nav>
    </div>
  </div>
  
  <!-- Recent Backers Section -->
  <div id="backers" class="mb-12">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold text-gray-900">Recent Backers</h2>
      <%= link_to "View All Backers", project_dashboard_backers_path(@project), class: "text-indigo-600 hover:text-indigo-800" %>
    </div>
    
    <% if @backers.any? %>
      <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <ul role="list" class="divide-y divide-gray-200">
          <% @backers.take(5).each do |pledge| %>
            <li>
              <div class="block hover:bg-gray-50">
                <div class="flex items-center px-4 py-4 sm:px-6">
                  <div class="min-w-0 flex-1 flex items-center">
                    <div class="flex-shrink-0">
                      <div class="h-12 w-12 rounded-full bg-indigo-100 flex items-center justify-center">
                        <span class="text-indigo-800 font-medium text-lg"><%= pledge.backer.name.first %></span>
                      </div>
                    </div>
                    <div class="min-w-0 flex-1 px-4 md:grid md:grid-cols-2 md:gap-4">
                      <div>
                        <p class="text-sm font-medium text-indigo-600 truncate">
                          <%= pledge.backer.name %>
                        </p>
                        <p class="mt-1 flex items-center text-sm text-gray-500">
                          <span class="truncate"><%= pledge.backer.email %></span>
                        </p>
                      </div>
                      <div class="hidden md:block">
                        <div>
                          <p class="text-sm text-gray-900">
                            <%= number_to_currency(pledge.amount) %>
                            <% if pledge.reward %>
                              for "<%= pledge.reward.title %>"
                            <% else %>
                              (no reward)
                            <% end %>
                          </p>
                          <p class="mt-1 text-sm text-gray-500">
                            Pledged on <%= pledge.created_at.strftime("%b %d, %Y") %>
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                      <%= pledge.status == 'completed' ? 'bg-green-100 text-green-800' : 
                         pledge.status == 'pending' ? 'bg-yellow-100 text-yellow-800' : 
                         'bg-gray-100 text-gray-800' %>">
                      <%= pledge.status.capitalize %>
                    </span>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% else %>
      <div class="bg-white shadow rounded-lg p-8 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        <h3 class="mt-2 text-lg font-medium text-gray-900">No backers yet</h3>
        <p class="mt-1 text-sm text-gray-500">Your project doesn't have any backers yet.</p>
      </div>
    <% end %>
  </div>
  
  <!-- Rewards Overview Section -->
  <div id="rewards" class="mb-12 hidden">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold text-gray-900">Rewards Overview</h2>
      <%= link_to "Manage Rewards", project_dashboard_rewards_path(@project), class: "text-indigo-600 hover:text-indigo-800" %>
    </div>
    
    <% if @rewards.any? %>
      <div class="bg-white shadow overflow-hidden rounded-md">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reward</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Backers</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total Raised</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Delivery</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @rewards.each do |reward| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= reward.title %></div>
                  <div class="text-sm text-gray-500"><%= truncate(reward.description, length: 50) %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= number_to_currency(reward.amount) %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= reward.pledges.count %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= number_to_currency(reward.pledges.sum(:amount)) %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900">
                    <% if reward.estimated_delivery %>
                      <%= reward.estimated_delivery.strftime("%b %Y") %>
                    <% else %>
                      <span class="text-gray-500">Not set</span>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="bg-white shadow rounded-lg p-8 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
        </svg>
        <h3 class="mt-2 text-lg font-medium text-gray-900">No rewards yet</h3>
        <p class="mt-1 text-sm text-gray-500">You haven't created any rewards for this project yet.</p>
        <div class="mt-6">
          <%= link_to "Add a Reward", new_project_reward_path(@project), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tabs = document.querySelectorAll('nav a');
    const sections = document.querySelectorAll('#backers, #rewards');
    
    // Show the first tab by default
    sections[0].classList.remove('hidden');
    
    tabs.forEach((tab, index) => {
      tab.addEventListener('click', function(e) {
        e.preventDefault();
        
        // Hide all sections
        sections.forEach(section => {
          section.classList.add('hidden');
        });
        
        // Remove active class from all tabs
        tabs.forEach(t => {
          t.classList.remove('border-indigo-500', 'text-indigo-600');
          t.classList.add('border-transparent', 'text-gray-500', 'hover:text-gray-700', 'hover:border-gray-300');
        });
        
        // Show the selected section
        const targetId = this.getAttribute('href').substring(1);
        document.getElementById(targetId).classList.remove('hidden');
        
        // Add active class to the clicked tab
        this.classList.remove('border-transparent', 'text-gray-500', 'hover:text-gray-700', 'hover:border-gray-300');
        this.classList.add('border-indigo-500', 'text-indigo-600');
      });
    });
  });
</script>
