<div class="flex <%= 'flex-col' if progress %>">
  <span class="<%= badge_class %>" role="status" aria-label="Status: <%= text %>">
    <%= text %>
  </span>
  <% if progress %>
    <div class="mt-1 w-full bg-gray-200 rounded-full h-1.5 overflow-hidden" role="progressbar" aria-valuenow="<%= progress_percentage %>" aria-valuemin="0" aria-valuemax="100">
      <div class="bg-<%= progress_color %> h-1.5 rounded-full" style="width: <%= progress_percentage %>%"></div>
    </div>
    <span class="text-xs text-gray-500 mt-0.5"><%= progress_percentage %>% complete</span>
  <% end %>
</div>
