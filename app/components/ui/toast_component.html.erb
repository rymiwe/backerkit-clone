<div id="toast-<%= SecureRandom.hex(5) %>" 
     class="fixed top-4 right-4 z-50 border-l-4 rounded shadow-md p-4 <%= type_classes %> transition-opacity duration-300 opacity-100"
     data-controller="toast" 
     data-toast-duration-value="<%= duration %>" 
     role="alert"
     aria-live="assertive">
  <div class="flex items-start">
    <div class="flex-shrink-0">
      <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="<%= icon_path %>" clip-rule="evenodd" />
      </svg>
    </div>
    <div class="ml-3">
      <p class="text-sm font-medium"><%= message %></p>
    </div>
    <% if dismissible %>
      <div class="ml-auto pl-3">
        <div class="-mx-1.5 -my-1.5">
          <button type="button" 
                  class="inline-flex rounded-md p-1.5 hover:opacity-75 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" 
                  data-action="toast#dismiss"
                  aria-label="Dismiss notification">
            <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>
